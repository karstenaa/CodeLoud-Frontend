    <![endif]-->


    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="js/sb-admin-2.js"></script>    
</head>

<body ng-app="Repository">

<div ng-view>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <% include partials/dashboardheader %>
            <!-- /.navbar-static-side -->
        </nav>

        <!-- page-wrapper -->
        <div id="page-wrapper">
        	<div ng-view>
            	<div class="row">
            	<div class="col-lg-12">
            	<h1 class="page-header">Add Process</h1>
            	<form method="post" action="rest/node">
            		<div class="form-group">
            			<p>Repository's Name</p>
            			<input name="name" class="form-control">
                        <p class="help-block">The name of your new repository.</p>
            		</div>
            		<div class="form-group">
            			<p>Repository URL (from Git)</p>
            			<input name="url" class="form-control">
                        <p class="help-block">The url to your git repository.</p>
            		</div>
            		<div class="form-group">
                        <p>Number of CPU that will be used</p>
                        <select name="cpu" class="form-control">
                        	<option>1</option>
                        	<option>2</option>
                        	<option>3</option>
                        	<option>4</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <p>Number of RAM that will be used</p>
                        <select name="ram" class="form-control">
                        	<option>128</option>
                        	<option>256</option>
                        	<option>512</option>
                        	<option>1024</option>
                        	<option>2048</option>
                        </select>
                    </div>
                <button type="submit" class="btn btn-success">Save</button>
            	</form>
            	</div>
            	</div>
        	</div> <!--end ng-view-->
       </div>  <!-- end page-wrapper -->
    </div>    <!--end wrapper-->

</body>

</html>
